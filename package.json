{
  "name": "astro-ts-boilerplate",
  "version": "0.0.1",
  "description": "A boilerplate/starter project for quickly building web using Astro with TypeScript",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint \"src/**/*.{astro,ts,tsx}\" --fix",
    "format": "prettier --write \"**/*.{astro,ts,tsx,cjs,mjs,json,md,mdx}\""
  },
  "lint-staged": {
    "src/**/*.{astro,ts,tsx}": "eslint --fix",
    "**/*.{astro,ts,tsx,cjs,mjs,json,md,mdx}": "prettier --write"
  },
  "dependencies": {
    "astro": "^2.1.7"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-plugin-astro": "^0.26.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "prettier-config-standard": "^5.0.0",
    "prettier-plugin-astro": "^0.8.0"
  }
}
