{
	"name": "astro-ts-boilerplate",
	"version": "1.0.0",
	"description": "A boilerplate/starter project for quickly building web using Astro with React and TypeScript",
	"author": "Irfnd <irfandiabimanyu@gmail.com>",
	"type": "module",
	"license": "MIT",
	"keywords": [
		"typescript",
		"react",
		"astrojs",
		"eslint",
		"prettier",
		"husky",
		"lint-staged",
		"boilerplate"
	],
	"scripts": {
		"prepare": "husky install",
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"lint": "eslint \"src/**/*.{astro,ts,tsx}\" --fix",
		"format": "prettier --write \"**/*.{astro,ts,tsx,cjs,mjs,json,md,mdx}\""
	},
	"lint-staged": {
		"src/**/*.{astro,ts,tsx}": "eslint --fix",
		"**/*.{astro,ts,tsx,cjs,mjs,json,md,mdx}": "prettier --write"
	},
	"dependencies": {
		"@astrojs/react": "^2.2.0",
		"astro": "^2.5.5",
		"react-dom": "^18.2.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@types/react-dom": "^18.2.4",
		"@types/react": "^18.2.6",
		"@typescript-eslint/parser": "^5.59.7",
		"eslint-plugin-astro": "^0.27.0",
		"eslint": "^8.41.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"prettier-plugin-astro": "^0.9.0",
		"prettier": "^2.8.8",
		"typescript": "^5.0.4"
	}
}
