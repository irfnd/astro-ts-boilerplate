{
	"name": "astro-ts-boilerplate",
	"version": "0.0.1",
	"description": "A boilerplate/starter project for quickly building web using Astro with React and TypeScript",
	"author": "Irfnd <irfandiabimanyu@gmail.com>",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"prepare": "husky install",
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"lint": "eslint \"src/**/*.{astro,ts,tsx}\" --fix",
		"format": "prettier --write \"**/*.{astro,ts,tsx,cjs,mjs,json,md,mdx}\""
	},
	"lint-staged": {
		"src/**/*.{astro,ts,tsx}": "eslint --fix",
		"**/*.{astro,ts,tsx,cjs,mjs,json,md,mdx}": "prettier --write"
	},
	"dependencies": {
		"@astrojs/react": "^2.1.0",
		"@types/react": "^18.0.31",
		"@types/react-dom": "^18.0.11",
		"astro": "^2.1.8",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@typescript-eslint/parser": "^5.57.0",
		"eslint": "^8.37.0",
		"eslint-plugin-astro": "^0.26.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.0",
		"prettier": "^2.8.7",
		"prettier-plugin-astro": "^0.8.0"
	}
}
